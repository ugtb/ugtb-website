---
import type { HTMLAttributes } from 'astro/types';
import Container from './Container.astro';

export interface Props extends HTMLAttributes<'section'> {
  title: string;
  description?: string;
  slotInside?: boolean;
}

const { title, description, slotInside, ...props } = Astro.props;
---

<section {...props}>
  <Container
    class:list={[
      'pt-10 lg:pt-30',
      {
        'pb-20 lg:pb-30': slotInside,
      },
    ]}
    left="md"
    right="sm"
  >
    <div
      class="flex flex-col gap-20 pb-20 sm:flex-row sm:items-start sm:justify-between lg:pb-30"
    >
      <h2
        class="relative text-H3-mobile md:py-6 md:before:absolute md:before:inset-y-0 md:before:left-0 md:before:block md:before:w-[5px] md:before:-translate-x-[75px] md:before:bg-brand lg:text-H3-desktop"
      >
        {
          title
            .split(' ')
            .map(word => (
              <span class="even:text-brand capitalize">{word + ' '}</span>
            ))
        }
      </h2>
      {description && <p class="text-md-400 max-w-md">{description}</p>}
    </div>
    {slotInside && <slot />}
  </Container>
  {!slotInside && <slot />}
</section>
