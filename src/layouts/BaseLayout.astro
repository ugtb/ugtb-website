---
import '@fontsource/montserrat';
import { getEntryBySlug } from 'astro:content';
import Footer from '~/components/Footer.astro';
import Header, { type Props as HeaderProps } from '~/components/Header.astro';
import '~/styles/tailwind.css';

interface Props {
  title: string;
  description: string;
  variant?: HeaderProps['variant'];
}

const company = await getEntryBySlug('companies', 'ugtb');
const { contacts } = company.data;

const { title, description, variant = 'dark' } = Astro.props;
---

<html lang="uk">
  <head>
    <meta charset="utf-8" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <link
      rel="mask-icon"
      href="/favicon/safari-pinned-tab.svg"
      color="#5bbad5"
    />
    <meta name="msapplication-TileColor" content="#2b5797" />
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body>
    <Header variant={variant} contacts={contacts} />
    <main>
      <slot />
    </main>
    <Footer contacts={contacts} />
  </body>
</html>
